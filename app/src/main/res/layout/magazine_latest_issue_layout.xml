<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/magazineLatestIssueLayout" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingLeft="@dimen/margin_medium" android:paddingRight="@dimen/margin_medium"
    android:paddingTop="@dimen/margin_small" android:paddingBottom="@dimen/margin_small"
    android:background="@drawable/background_tile" >

    <ImageView
        android:id="@+id/imageViewCover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="@dimen/text_size_large"
        android:rotation="345"
        android:textColor="@color/red"
        android:textStyle="bold" />

</RelativeLayout>