<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/magazineItemLayout" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_small" android:paddingBottom="@dimen/margin_small"
    android:paddingLeft="@dimen/margin_medium" android:paddingRight="@dimen/margin_medium"
    android:background="@drawable/background_tile" >

    <ImageView
        android:id="@+id/imageViewCover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/white"
        android:background="@color/dark_transparent" />

</LinearLayout>